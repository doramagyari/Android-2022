<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/startQuiz">

    <fragment
        android:id="@+id/startQuiz"
        android:name="com.example.quizv2.ui_fragments.StartQuiz"
        android:label="StartQuiz" >
        <action
            android:id="@+id/action_startQuiz_to_currentQuiz"
            app:destination="@id/currentQuiz" />
        <action
            android:id="@+id/action_startQuiz_to_currentQuizCheck"
            app:destination="@id/currentQuizCheck" />
    </fragment>

    <fragment
        android:id="@+id/currentQuiz"
        android:name="com.example.quizv2.ui_fragments.CurrentQuiz"
        android:label="CurrentQuiz" >
        <action
            android:id="@+id/action_currentQuiz_self"
            app:destination="@id/currentQuiz" />
        <action
            android:id="@+id/action_currentQuiz_to_currentQuizCheck"
            app:destination="@id/currentQuizCheck" />
        <action
            android:id="@+id/action_currentQuiz_to_startQuiz"
            app:destination="@id/startQuiz" />
    </fragment>
    <fragment
        android:id="@+id/currentQuizCheck"
        android:name="com.example.quizv2.ui_fragments.CurrentQuizCheck"
        android:label="CurrentQuizCheck" >
        <action
            android:id="@+id/action_currentQuizCheck_self"
            app:destination="@id/currentQuizCheck" />
        <action
            android:id="@+id/action_currentQuizCheck_to_currentQuiz"
            app:destination="@id/currentQuiz" />
        <action
            android:id="@+id/action_currentQuizCheck_to_startQuiz"
            app:destination="@id/startQuiz" />
    </fragment>

</navigation>