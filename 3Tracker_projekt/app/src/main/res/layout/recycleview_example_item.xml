<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/taskbackground">


    <TextView
        android:id="@+id/ProjectTypeTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="10dp"
        android:text="Type of Project"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/TitleOfTask"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TitleOfTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="13dp"
        android:text="Title Of Task"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/UserAndDateOfPosting"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/UserAndDateOfPosting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="10dp"
        android:text="User &amp; Date"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/AssigneeTask"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/AssigneeTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="7dp"
        android:text="Assignee:"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/UserPosting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="7dp"
        android:text="User"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toEndOf="@+id/AssigneeTask" />

    <View
        android:id="@+id/divider"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/DeadlineOfTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/DeadlineOfTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="13dp"
        android:text="Deadline: "
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/DescriptionOfTask"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/DeadlineOfTaskDate"
        android:layout_width="31dp"
        android:layout_height="17dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="13dp"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/DescriptionOfTask"
        app:layout_constraintStart_toEndOf="@+id/DeadlineOfTask" />

    <TextView
        android:id="@+id/PriorityOftask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="12dp"
        android:text="Task Priority"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/DescriptionOfTask"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/DescriptionOfTask"
        android:layout_width="374dp"
        android:layout_height="84dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="16dp"
        android:text="description"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>